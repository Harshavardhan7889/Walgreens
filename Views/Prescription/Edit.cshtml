@model Prescription
@{
    string title = ViewBag.Action + " Prescription";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="PrescriptionId" class="form-label">Prescription ID</label>
        <input asp-for="PrescriptionId" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="MedicationName" class="form-label">Medication Name</label>
        <input asp-for="MedicationName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="FillStatus" class="form-label">Fill Status</label>
        <select asp-for="FillStatus" class="form-control">
            <option value="New">New</option>
            <option value="Filled">Filled</option>
            <option value="Pending">Pending</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label">Cost</label>
        <input asp-for="Cost" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="RequestTime" class="form-label">Request Time</label>
        <input asp-for="RequestTime" 
               class="form-control" 
               type="datetime-local"
               value="@Model.RequestTime.ToString("yyyy-MM-ddTHH:mm")">
    </div>

    <input type="hidden" asp-for="PrescriptionId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" 
        class="btn btn-primary">Cancel</a>
</form>
